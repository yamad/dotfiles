[include]
    # from http://stackoverflow.com/a/13615531/192780 (David Dobson)
    path = ~/.gitconfig.local
[color]
    ui     = auto
[core]
    excludesfile = ~/.gitignore
[apply]
    whitespace = fix
[branch]
    autosetuprebase = always
[alias]
    br  = branch
    ci  = commit
    co  = checkout
    df  = diff
    dfs = diff --staged
    dw  = diff --word-diff
    lgs = log --stat
    lg  = log --graph --oneline --decorate
    st  = status
    dangling-branches = for-each-ref --format='%(if:equals=[gone])%(upstream:track)%(then)%(refname:short)%(end)' refs/heads
    cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|main\\|develop' | xargs -n 1 git branch -d"
    publish = push -u origin HEAD


    # from Gary Bernhardt (github.com/garybernhardt/dotfiles)
    dc = diff --cached
    amend = commit --amend
    aa = add --all
    ff = merge --ff-only
    pullff = pull --ff-only
    noff = merge --no-ff
    fa = fetch --all
    pom = push origin master
    ds = diff --stat=160,120
    dh1 = diff HEAD~1
    # Fancy logging.
    #   h = head
    #   hp = head with patch
    #   r = recent commits, only current branch
    #   ra = recent commits, all reachable refs
    #   l = all commits, only current branch
    #   la = all commits, all reachable refs
    #   lt = commits with tags
    head = !git r -1
    h = !git head
    hp = "!. ~/.githelpers && show_git_head"
    r = !GIT_NO_PAGER=1 git l -30
    ra = !git r --all
    l = "!. ~/.githelpers && pretty_git_log"
    la = !git l --all
    lt = log --no-walk --tags --decorate=full --pretty='%h %d %s'
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
